<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Runs</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Run History</h1>
    <a href="runs/new">Add a New Run</a>
    <ul>
      <% runs.forEach((run) => { %>
      <a href="/users/<%= user._id %>/runs/<%= run._id %>"
        >
        <li>
          <%= new Date(run.date).toLocaleDateString({ year: 'numeric', month:
          'short', day: 'numeric' }); %> <%= run.distance %><%= run.distanceUnit %>, <%= run.time %></li>
          <li><%= run.location %></li>
        <br />
        <% }); %></a
      >
    </ul>
  </body>
</html>
